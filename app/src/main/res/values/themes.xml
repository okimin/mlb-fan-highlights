<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MLBFanHighlights" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
       <item name="colorPrimary">@color/primary_color</item>
    </style>

    <style name="Theme.MLBFanHighlights" parent="Base.Theme.MLBFanHighlights" />
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_color</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/icon_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MLBFanHighlights</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>